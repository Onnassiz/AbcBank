@model IEnumerable<AbcBank.Models.TransactionJoinView>

@{
    ViewBag.Title = "Transactions";
}

<h2>Account Transactions</h2><hr/>
<div class="dropdown">
    <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="">
        New Transaction
        <span class="caret"></span>
    </a>

    <ul class="dropdown-menu" aria-labelledby="drop4">
        <li>@Html.ActionLink("Credit", "Index", "Credit")</li>
        <li>@Html.ActionLink("Debit", "Index", "Debit")</li>
        <li>@Html.ActionLink("Fund Transfer", "Credit", "Credit")</li><hr/>
        <li>@Html.ActionLink("Set Savings Interest", "Credit", "Credit")</li>
    </ul>
</div>

@if (TempData["Response"] != null)
{
    <div class="alert alert-success">
        @Html.Raw(TempData["Response"].ToString())
    </div>
}
<br/><br/>
<table class="table table-hover">
    <tr>
        <th>Transaction Date</th>
        <th>Account Name</th>
        <th>Account Number</th>
        <th>Amount</th>
        <th>Type</th>
        <th>From</th>
        <th>Personel</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DateCreated.ToString("dddd, MMMM dd, yyyy h:mm tt")</td>
            <td>@item.AccountName</td>
            <td>@item.AccountNumber</td>
            <td><span>&#163</span>@item.Amount</td>
            <td>
                @if (item.Type == "Credit")
                {
                    <span style="color: #3c763d">Credit</span>
                }
                else
                {
                    <span style="color: red">Debit</span>
                }
            </td>
            <td>@item.From</td>
            <td>@item.Personnel</td>
            <td>
                <a href="/Transaction/View/@item.Id" title="view"><i class="fa fa-arrow-circle-right"></i></a>
            </td>
        </tr>
    }
</table>





