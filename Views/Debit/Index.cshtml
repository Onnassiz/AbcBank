@model Transaction

@{
    ViewBag.Title = "Credit Account";
}

<h2>Debit Transactions</h2><hr/>
<p>
    <a href="/Transaction"><i class="fa fa-arrow-circle-left"></i> Transactions</a>
</p>

@if (TempData["Response"] != null)
{
    <div class="alert alert-success">
        @TempData["Response"].ToString()
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"].ToString()
    </div>
}


@using (Html.BeginForm("Find", "Credit", FormMethod.Post, new { @class = "form-horizontal col-md-8", role = "form"}))
{
    <h3>Account Number and Sort Code</h3><hr/>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        @Html.Label("", "Account number:", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBox("AccountNumber", null, new { @class = "form-control", required = "required"})
            @Html.TextBox("Type", "Debit", new { @class = "form-control", type = "hidden"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-6 col-md-2">
            <input type="submit" value="Find" class="btn btn-default form-control"/>
        </div>
    </div>
}



